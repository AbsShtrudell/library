<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" stylesheets="@styles/light_theme.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.shtrudell.client.fxml.Registration">
   <children>
      <VBox alignment="CENTER" layoutX="65.0" layoutY="19.0" prefHeight="352.0" prefWidth="170.0" spacing="20.0">
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" text="Регистрация" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" promptText="Имя" />
            <TextField fx:id="surnameField" promptText="Фамилия" />
            <TextField fx:id="loginField" layoutX="10.0" layoutY="60.0" promptText="Логин *" />
            <PasswordField fx:id="passwordField" promptText="Пароль *">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="repeatPasswordField" promptText="Повторить пароль *" />
            <Button fx:id="singupButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#singupAction" styleClass="attention" text="Зарегестрироваться" />
            <Button layoutX="20.0" layoutY="294.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#backAction" text="Назад" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
